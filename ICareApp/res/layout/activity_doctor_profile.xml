<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/headerDoctorProfile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/headerDoctorProfile"
                android:textColor="#78C54F"
                android:textSize="25sp"
                android:textStyle="bold"
                android:typeface="monospace" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="9"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/db_doctorcheck_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/textName"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/etDoctorName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/etDoctorName"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvSpeciality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/tvSpeciality"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/etDoctorSpeciality"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/etSpeciality"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                 android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/tvPhone"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/etDoctorPhone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/phoneEditText"
                    android:inputType="phone"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/emailTextView"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/etDoctorEmail"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/emailEditText"
                    android:inputType="textEmailAddress"
                    android:textColor="#000000"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:typeface="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chamberTextView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.5"
                    android:text="@string/chamberTextView"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/etDoctorChamber"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:hint="@string/chamberEditText"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:padding="10dp"
                    android:typeface="monospace" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnDoctorSubmit"
            android:layout_width="162dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="#607D8B"
            android:text="@string/buttonSubmit"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</ScrollView>